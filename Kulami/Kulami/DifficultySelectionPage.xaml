<UserControl x:Class="Kulami.DifficultySelectionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="920" d:DesignWidth="1760">
    <Grid>
        <Canvas Name="SelectionBackground" >
            <Button Name="EasyLevelButton" Content="" Canvas.Left="378" Canvas.Top="280" Width="420" Height="400" Click="EasyLevelButton_Click" BorderBrush="{x:Null}"/>
            <Button x:Name="HardLevelButton" Content="" Canvas.Right="378" Canvas.Top="280" Width="420" Height="400" Click="HardLevelButton_Click" BorderBrush="{x:Null}"/>
            <Label Name="LevelLabel" Content="Select Difficulty" Canvas.Left="465" Canvas.Top="60" Height="125" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="SquareFont" FontSize="90" Foreground="#FFBDE4FC"/>
        </Canvas>

    </Grid>
</UserControl>
