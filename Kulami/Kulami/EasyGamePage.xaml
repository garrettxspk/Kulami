                        </Style.Resources>
                        <Setter Property="Visibility" Value="Hidden" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=PlayerTurnLabel, Path=IsVisible}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                                <DataTrigger.EnterActions>
