<UserControl x:Class="Kulami.VideoIntroScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1440">
    <Grid Background="Black">
        <Canvas Name="VideoCanvas" HorizontalAlignment="Left" Height="900" VerticalAlignment="Top" Width="1440">
            <MediaElement Name="VideoControl" 
              LoadedBehavior="Manual" Width="1440" OpacityMask="Black" Opacity="0.9" MediaEnded="VideoControl_MediaEnded" />
            <Button Name="skipBtn" Content="" Canvas.Left="1223" Canvas.Top="787" Width="181" Height="77" BorderThickness="3" BorderBrush="#FF95D1FF" Click="skipBtn_Click" MouseEnter="skipBtn_MouseEnter" MouseLeave="skipBtn_MouseLeave"/>

        </Canvas>
    </Grid>
</UserControl>
