             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1480">
    <Grid>
        <Canvas Name="SelectionBackground" >
            <Button Name="LocalModeButton" Content="" Canvas.Left="342" Canvas.Top="302" Width="337" Height="321" Click="LocalModeButton_Click" BorderBrush="{x:Null}"/>
            <Button x:Name="OnlineModeButton" Content="" Canvas.Right="378" Canvas.Top="302" Width="337" Height="321" Click="OnlineModeButton_Click" BorderBrush="{x:Null}" Canvas.Left="819"/>
