            <Label x:Name="gameTimeLabel" Content="00" Canvas.Left="1177" Canvas.Top="281" Height="80" Width="338" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="59" HorizontalAlignment="Center" Foreground="#FFBEEAFF" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
