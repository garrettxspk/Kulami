            <Label x:Name="sectorsConqueredLabel" Content="00" Canvas.Left="1270" Canvas.Top="465" Height="98" Width="155" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="59" HorizontalAlignment="Center" Foreground="#FFBEEAFF" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="sectorsLostLabel" Content="00" Canvas.Left="1270" Canvas.Top="567" Height="98" Width="155" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="59" HorizontalAlignment="Center" Foreground="#FFBEEAFF" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="totalScoreLabel" Content="00" Canvas.Left="1270" Canvas.Top="670" Height="88" Width="155" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="59" HorizontalAlignment="Center" Foreground="#FFBEEAFF" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Canvas>

    </Grid>
</UserControl>
