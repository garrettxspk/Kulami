<UserControl x:Class="Kulami.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="780" d:DesignWidth="1480">
    <Grid>
        <Canvas Name="MainBackground" HorizontalAlignment="Left" Height="780" VerticalAlignment="Top" Width="1480">
            <Button Content="quick game" Canvas.Left="769" Canvas.Top="245" Width="337" Height="69" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="62" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Click="QuickGameButton_Click" Style="{StaticResource MyButtonStyle}"/>
            <Button Content="multiplayer" Canvas.Left="769" Canvas.Top="317" Width="399" Height="68" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="62" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Style="{StaticResource MyButtonStyle}" Click="Button_Click"/>
            <Button Content="options" Canvas.Left="769" Canvas.Top="390" Width="250" Height="68" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="62" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Click="OptionsButton_Click" Style="{StaticResource MyButtonStyle}"/>
            <Button Content="quit" Canvas.Left="769" Canvas.Top="535" Width="143" Height="69" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="62" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Style="{StaticResource MyButtonStyle}" Click="QuitButton_Click"/>
            <Button Content="how to play" Canvas.Left="769" Canvas.Top="466" Width="381" Height="69" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="62" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Style="{StaticResource MyButtonStyle}" Click="Button_Click_1"/>

        </Canvas>

    </Grid>
</UserControl>
