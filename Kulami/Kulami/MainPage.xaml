<UserControl x:Class="Kulami.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="920" d:DesignWidth="1760">
    <Grid>
        <Canvas Name="MainBackground" HorizontalAlignment="Left" Height="920" VerticalAlignment="Top" Width="1760">
            <Button Content="quick game" Canvas.Left="769" Canvas.Top="262" Width="481" Height="96" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="92" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Click="QuickGameButton_Click" Style="{StaticResource MyButtonStyle}"/>
            <Button Content="multiplayer" Canvas.Left="769" Canvas.Top="363" Width="565" Height="96" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="92" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Style="{StaticResource MyButtonStyle}" Click="Button_Click"/>
            <Button Content="options" Canvas.Left="769" Canvas.Top="464" Width="353" Height="96" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="92" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Click="OptionsButton_Click" Style="{StaticResource MyButtonStyle}"/>
            <Button Content="quit" Canvas.Left="769" Canvas.Top="565" Width="189" Height="96" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="SquareFont" FontSize="92" HorizontalAlignment="Center" VerticalAlignment="Center" TextOptions.TextHintingMode="Animated" Foreground="#FFBEEAFF" Style="{StaticResource MyButtonStyle}" Click="QuitButton_Click"/>

        </Canvas>

    </Grid>
</UserControl>
